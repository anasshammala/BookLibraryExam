@model List<BookLibraryExam.Models.Book>
@{
    ViewData["Title"] = "Books Inventory";
}

<div class="container mt-4">
    <h1>Book Library Management</h1>

    <div class="mb-3">
        <a href="/Books/Create" class="btn btn-primary">Add New Book</a>
    </div>

    <div class="card">
        <div class="card-header">
            <h3>Books Inventory</h3>
        </div>
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Author</th>
                        <th>ISBN</th>
                        <th>Year</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var book in Model)
                    {
                        <tr>
                            <td>@book.Title</td>
                            <td>@book.Author</td>
                            <td>@book.ISBN</td>
                            <td>@book.PublicationYear</td>
                            <td>
                                <a href="/Books/Edit/@book.Id" class="btn btn-sm btn-warning">Edit</a>
                                <form asp-action="Delete" method="post" style="display:inline">
                                    <input type="hidden" name="id" value="@book.Id" />
                                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
